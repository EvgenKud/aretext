[
  {
    "name": "default",
    "pattern": "**",
    "config": {
      "autoIndent": false,
      "hideDirectories": [
        ".git"
      ],
      "syntaxLanguage": "plaintext",
      "tabExpand": false,
      "tabSize": 4,
      "showLineNumbers": false
    }
  },
  {
    "name": "json",
    "pattern": "**/*.json",
    "config": {
      "autoIndent": true,
      "syntaxLanguage": "json",
      "tabExpand": true,
      "tabSize": 2,
      "showLineNumbers": true
    }
  },
  {
    "name": "go",
    "pattern": "**/*.go",
    "config": {
      "autoIndent": true,
      "syntaxLanguage": "go",
      "tabExpand": false,
      "tabSize": 4,
      "showLineNumbers": true
    }
  }
]
